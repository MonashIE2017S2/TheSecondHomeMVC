<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    @Scripts.Render("~/Scripts/modernizr")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    <link rel="stylesheet" href="~/Content/Animation.css">
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script src="~/Scripts/Modals.js"></script>
    <style>
         hr {
             height: 4px;
             margin-left: 15px;
             margin-bottom: -3px;
         }

        .hr-warning {
            background-image: -webkit-linear-gradient(left, rgba(210,105,30,.8), rgba(210,105,30,.6), rgba(0,0,0,0));
        }

        .hr-success {
            background-image: -webkit-linear-gradient(left, rgba(15,157,88,.8), rgba(15, 157, 88,.6), rgba(0,0,0,0));
        }

        .hr-primary {
            background-image: -webkit-linear-gradient(left, rgba(66,133,244,.8), rgba(66, 133, 244,.6), rgba(0,0,0,0));
        }

        .hr-danger {
            background-image: -webkit-linear-gradient(left, rgba(244,67,54,.8), rgba(244,67,54,.6), rgba(0,0,0,0));
        }

        .hr-info {
            background-image: -webkit-linear-gradient(left, rgba(86,192,224,.8), rgba(86,192,224,.6), rgba(0,0,0,0));
        }

        .btn-primary {
            padding: 10px 10px;
            text-align: left;
        }

        .btn-danger {
            padding: 10px 6px;
            text-align: left;
        }

        .btn-success {
            padding: 10px 28px;
            text-align: left;
        }

        .btn-info {
            padding: 10px 39px;
            text-align: left;
        }

        .btn-warning {
            padding: 10px 18px;
            text-align: left;
        }

        .breadcrumb {
            background: rgba(245, 245, 245, 0);
            border: 0px solid rgba(245, 245, 245, 1);
            border-radius: 25px;
            display: block;
        }

        .btn-bread {
            margin-top: 10px;
            font-size: 12px;
            border-radius: 3px;
        }
    </style>
</head>
<body>
    <div class="col-md-1 column">
    </div>
    <div class="col-md-10 column">
        <br>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Team-Y-Nots</p>
                </footer>
            </section>
        </div>
        @RenderSection("Scripts", required: false)
    </div>
    <div class="col-md-1 column">
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("The Second Home", "Index", "Home", new { area = "" }, new { @style = "color: white; " })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @style = "color: white; " })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @style = "color: white; " })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</body>
</html>